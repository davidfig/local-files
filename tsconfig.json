{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "."
  },
  "files": [
    "src/localFiles.ts",
    "src/localFilesServer.ts",
    "src/cli.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist"
  ]
}